<vs:DialogWindow
    x:Class="Malware.MDKUI.BlueprintManager.BlueprintManagerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
    xmlns:local="clr-namespace:Malware.MDKUI.BlueprintManager"
    xmlns:common="clr-namespace:Malware.MDKUI.Common"
    xmlns:conversion="clr-namespace:Malware.MDKUI.Malformed.Conversion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterOwner"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextHintingMode="Auto"
    TextOptions.TextRenderingMode="Auto"
    Title="Script Blueprint Manager"
    MinWidth="100"
    MinHeight="100"
    Width="500"
    Height="400">

    <vs:DialogWindow.Resources>
        <ResourceDictionary Source="/MDKUI;component/Resources.xaml" />
    </vs:DialogWindow.Resources>

    <Grid x:Name="Host" Margin="16"
          d:DataContext="{d:DesignInstance local:BlueprintManagerDialogModel}">
        <Grid.Resources>
            <conversion:BooleanConverter x:Key="converters/toBoolean" />
            <conversion:VisibilityConverter x:Key="converters/booleanVisibility" TrueValue="Visible"
                                            FalseValue="Collapsed" />
            <conversion:VisibilityConverter x:Key="converters/inverseBooleanVisibility" TrueValue="Collapsed"
                                            FalseValue="Visible" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Margin="0,0,0,8" TextWrapping="Wrap" Text="{Binding CustomDescription}"
                   Visibility="{Binding CustomDescription, Converter={StaticResource converters/booleanVisibility}}" />
        <ListBox x:Name="BlueprintsListBox" Grid.Column="0" Grid.Row="1"
                 ItemsSource="{Binding Blueprints}" SelectedItem="{Binding SelectedBlueprint}" SelectionMode="Single"
                 HorizontalContentAlignment="Stretch">
            <ListBox.InputBindings>
                <KeyBinding Key="C" Modifiers="Control" Command="{Binding CopyToClipboardCommand}" />
            </ListBox.InputBindings>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid x:Name="container">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="48" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Width="32" Height="20" Margin="0,2,16,2" Stretch="Uniform"
                               Source="{Binding Thumbnail}"
                               RenderOptions.BitmapScalingMode="HighQuality" VerticalAlignment="Center" />
                        <TextBox
                            Visibility="{Binding IsBeingEdited, Converter={StaticResource converters/booleanVisibility}}"
                            Grid.Column="1" x:Name="editBox"
                            Text="{Binding EditedName, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center"
                            IsVisibleChanged="EditBox_OnIsVisibleChanged"
                            LostFocus="EditBox_OnLostFocus"
                            KeyDown="EditBox_OnKeyDown" />
                        <TextBlock
                            Visibility="{Binding IsBeingEdited, Converter={StaticResource converters/inverseBooleanVisibility}}"
                            Margin="3,1,0,0" Grid.Column="1" x:Name="name" Text="{Binding Name}"
                            VerticalAlignment="Center" />
                        <Button Grid.Column="2" Padding="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                ToolTip="Copy script to clipboard"
                                Command="{Binding CopyToClipboardCommand}">
                            <Image Source="{StaticResource drawings/copy-icon}" Width="12" Height="12"/>
                        </Button>
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSignificant}" Value="True">
                            <Setter TargetName="name" Property="FontWeight" Value="Bold" />
                            <Setter TargetName="container" Property="Background"
                                    Value="{StaticResource {x:Static SystemColors.InfoBrushKey}}" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="8,0,0,0" Width="96">
            <Button Margin="0,0,0,8" Command="{Binding RenameCommand}">_Rename</Button>
            <Button Margin="0,0,0,8" Command="{Binding DeleteCommand}">_Delete</Button>
            <Button Margin="0,0,0,8" Command="{Binding OpenFolderCommand}">_Open Folder</Button>
            <!--<Button Margin="0,0,0,8" Command="{Binding CopyToClipboardCommand}">_Copy</Button>-->
        </StackPanel>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" TextWrapping="Wrap" Margin="0,8,0,8">
            Don't forget to hit "refresh" if you have Space Engineers and the Workshop browser open.<LineBreak />
            <LineBreak />
            Select a script and press <Bold>CTRL+C</Bold> (or the Copy button) to copy it to the clipboard.
        </TextBlock>

        <CheckBox Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="3" Content="Show this dialog on deployment" 
                  Margin="0,8,0,0"
                  IsChecked="{Binding ShowOnDeploy}"/>
        
        <common:ButtonBar Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="4" VerticalAlignment="Bottom"
                          Margin="0,4,0,0"
                          HelpPageUrl="{Binding HelpPageUrl}">
            <Button MinWidth="96" Command="{Binding SaveAndCloseCommand}" IsCancel="True">Close</Button>
        </common:ButtonBar>
    </Grid>
</vs:DialogWindow>