<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:controls="clr-namespace:Malware.MDKUI.Malformed.Controls">

    <Style TargetType="controls:FormPanelItem">
        <Setter Property="LabelWidth" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:FormPanelItem">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="FormPanel_Label" Width="{TemplateBinding LabelWidth}" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ContentControl Grid.Column="0" Grid.Row="0" Margin="2"
                                        ContentTemplate="{TemplateBinding LabelTemplate}"
                                        Content="{TemplateBinding Label}">
                            <ContentControl.ContentTemplateSelector>
                                <controls:TypeTemplateSelector>
                                    <controls:TypeTemplateSelector.Selections>
                                        <DataTemplate DataType="{x:Type system:String}">
                                            <Label Content="{Binding}" />
                                        </DataTemplate>
                                    </controls:TypeTemplateSelector.Selections>
                                </controls:TypeTemplateSelector>
                            </ContentControl.ContentTemplateSelector>
                        </ContentControl>
                        <ContentPresenter Grid.Column="1" Grid.Row="0" Margin="2" x:Name="Host" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ShowLabel" Value="False">
                            <Setter TargetName="Host" Property="Grid.Column" Value="0" />
                            <Setter TargetName="Host" Property="Grid.ColumnSpan" Value="2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="controls:FormPanel" BasedOn="{StaticResource {x:Type ItemsControl}}">
        <Style.Resources>
            <Style TargetType="Separator">
                <Setter Property="controls:FormPanel.ShowLabel" Value="False" />
                <Setter Property="Margin" Value="0,16,0,16" />
            </Style>
        </Style.Resources>
        <Setter Property="Grid.IsSharedSizeScope" Value="True" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource {x:Type controls:FormPanelItem}}" />
    </Style>

</ResourceDictionary>